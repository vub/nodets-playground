{
  "name": "nodets-playground",
  "version": "1.0.0",
  "description": "A Node start kit with Typescript and Testing",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "build": "tsc src/app.ts --outDir dist",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "test": "mocha -r ts-node/register **/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vub/nodets-playground.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vub/nodets-playground/issues"
  },
  "homepage": "https://github.com/vub/nodets-playground#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "chai": "^4.3.3",
    "eslint": "^7.21.0",
    "mocha": "^8.3.1",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
